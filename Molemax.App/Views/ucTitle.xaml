<UserControl x:Class="Molemax.App.Views.ucTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/Splash/MoleMaxHD.png" Grid.Column="0" HorizontalAlignment="Left"></Image>
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding ViewName}" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding PatientInfo}" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0" Orientation="Horizontal">
            <TextBlock Text="Current user: " FontSize="20"/>
            <TextBlock Text="{Binding User}" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
